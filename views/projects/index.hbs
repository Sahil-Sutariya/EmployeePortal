<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Portal</title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css"> 
</head>
<body>
    
    <centre><h1>{{title}}</h1></centre>


{{#if user}}
<a href="/projects/add">Add a new Employee</a>
{{/if}}

 <div class="container"> 
<table class="table">
    <thread class="thead-dark">
        <th>Employee Id</th>
        <th>Employee Name</th>
        <th>Date</th>
        <th>Status</th>
    </thread>

    {{#each dataset}}
    {{!-- <tr>
        <td>{{this.employeeId}}</td>
        <td>{{this.employeeName}}</td>
        <td>{{this.date}}</td>
        <td>{{this.status}}</td>
    </tr> --}}
<tr class="table-primary">
      <th scope="row">{{this.employeeId}}</th>
      <td>{{this.employeeName}}</td>
      <td>{{toShortDate this.date}}</td>
      <td>{{this.status}}</td>

      {{#if ../user}}
      <td>
          <a href="/projects/edit/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/projects/delete/{{this._id}}" 
                class="btn btn-danger"
                onclick="return confirmDeletion();">Delete</a>
      </td>
      {{/if}}
    </tr>

    {{/each}}
</table>
</div>

</body>
<script src="/javascripts/bootstrap.min.js">
</html>



